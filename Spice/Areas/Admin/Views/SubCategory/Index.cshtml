@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="SubCategory" class="btn btn-primary" asp-area="Admin">  <i class="fa fa-plus"></i> &nbsp; Create New </a>
        </div>

    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th> @Html.DisplayNameFor(x=>x.Name)</th>
                    <th> @Html.DisplayNameFor(x=>x.Category)</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Category.Name
                        </td>
                        
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-controller="SubCategory" asp-route-Id="@item.Id" class="btn btn-primary">

                                    <i class='fa fa-edit'></i>
                                </a>
                                <a asp-action="Details" asp-controller="SubCategory" asp-route-Id="@item.Id" class="btn btn-primary">

                                    <i class="fa fa-list"></i>
                                </a>
                                <a asp-action="Delete" asp-controller="SubCategory" asp-route-Id="@item.Id" class="btn btn-danger">

                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>

                        
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Sub Category Exist .... </p>
        }

    </div>

</div>

