@model SubCategory

@{
    ViewData["Title"] = "Edit";
}
<div class="backgroundWhite  border row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-controller="SubCategory" asp-area="Admin">
            <div class="whiteBackground">
                @Html.HiddenFor(m => m.Id)
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Category.Name"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Category.Name" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name" class="form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Name"  class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-2">
                        <input type="submit" value="Update" class="btn btn-danger">
                        <a class="btn btn-primary" asp-action="Index" asp-controller="SubCategory" asp-area="Admin"> Back to list</a>
                    </div>

                </div>
            </div>

        </form>

    </div>
</div>