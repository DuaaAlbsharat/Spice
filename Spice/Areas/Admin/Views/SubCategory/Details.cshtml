@model SubCategory
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info"> Detiales Sub Categores </h2>
<br />
<div class="backgroundWhite">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Category.Name"></label>
        </div>
        <div class="col-5">
            <input asp-for="Category.Name" readonly class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name" class="form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <a class="btn btn-primary" asp-action="Index" asp-controller="SubCategory" asp-area="Admin"> Back to list</a>
        </div>

    </div>
</div>

