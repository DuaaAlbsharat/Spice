@model Spice.Models.Category

@{
    ViewData["Title"] = "Edit";
}


<br />
<h4>Edit Category</h4>
<br />
<hr />
<form asp-action="Edit" asp-controller="Category" method="post">
    @Html.HiddenFor(x=>x.Id)
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
               <div class="row">
                   <div class="col-6">
                       <input  type="submit" class="btn btn-info form-control" value="Update" asp-route-Id="@Model.Id"/>
                   </div>
                   <div class="col-6">
                       <a asp-action="Index" asp-controller="Category" class="btn btn-success form-control">Back To List </a>

                   </div>

               </div>

            </div>

        </div>
    </div>

</form>

