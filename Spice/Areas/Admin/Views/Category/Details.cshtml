@model Spice.Models.Category

@{
    ViewData["Title"] = "Details";
}

<br />
<h4>Details Category</h4>
<br />
<hr />
<form asp-action="Details" asp-controller="Category" method="get">
    @Html.HiddenFor(x=>x.Id)
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                @Html.DisplayNameFor(x=>x.Name)
            </div>
            <div class="col-5">
                @Html.DisplayFor(x=>x.Name , new{@class="form-control"})
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <a asp-action="Edit" asp-controller="Category" class="btn btn-success form-control"> Edit</a>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Category" class="btn btn-success form-control">Back To List </a>
                    </div>

                </div>

            </div>

        </div>
    </div>

</form>