@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu Item  List</h2>
        </div>
        <div class="col-6 text-right">
           <p>
              <a asp-action="Create" asp-controller="MenuItem"  class="btn btn-info"> <i class="fa fa-plus"></i> &nbsp; Create New</a>
          </p>
        </div>

    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th> @Html.DisplayNameFor(x=>x.Name)</th>
                    <th> @Html.DisplayNameFor(x=>x.Descreption)</th>
                    <th> @Html.DisplayNameFor(x=>x.Price)</th>
                    <th> @Html.DisplayNameFor(x=>x.CategoryId)</th>
                    <th> @Html.DisplayNameFor(x=>x.Image)</th>
                    <th> @Html.DisplayNameFor(x=>x.SubCategory)</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Descreption
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Category.Name
                        </td>
                        <td>
                            <img src="@Url.Content(item.Image)" alt="MenuImage" style="width:80px;height:80px">
                        </td>
                        <td>
                            @item.SubCategory.Name
                        </td>
                        <td>
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-controller="MenuItem" asp-route-Id="@item.Id" class="btn btn-primary">

                                    <i class='fa fa-edit'></i>
                                </a>
                                <a asp-action="Details" asp-controller="MenuItem" asp-route-Id="@item.Id" class="btn btn-primary">

                                    <i class="fa fa-list"></i>
                                </a>
                                <a asp-action="Delete" asp-controller="MenuItem" asp-route-Id="@item.Id" class="btn btn-danger">

                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>


                        </td>
                     
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Menu Item  Exist .... </p>
        }

    </div>

</div>



