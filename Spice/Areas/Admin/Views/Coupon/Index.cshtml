@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Coupons List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Coupon" class="btn btn-primary"> <i class="fa fa-plus"></i> &nbsp; Create New </a>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CouponType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ECouponType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MinAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Picture)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.IsActive)
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CouponType
                        </td>
                        <td>
                            @item.ECouponType
                        </td>
                        <td>
                            @item.Discount
                        </td>
                        <td>
                            @item.MinAmount
                        </td>
                        <td>
                            <img src=" @Url.Content(item.Picture)" style="width:50px ;Height:50px" alt="images" />
                        </td>
                        <td>
                            @item.IsActive
                        </td>
                        <td>
                            <div class="btn-group offset-3" role="group">
                                <a class="btn btn-outline-info" asp-action="Edit" asp-controller="Coupon" asp-area="Admin" asp-route-id="@item.CouponId"> <i class='fa fa-edit'></i></a>
                                <a class="btn btn-outline-success" asp-action="Details" asp-controller="Coupon" asp-area="Admin" asp-route-id="@item.CouponId"> <i class="fa fa-list"></i></a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Coupon" asp-area="Admin" asp-route-id="@item.CouponId"><i class="fa fa-trash"></i></a>
                            </div>

                        </td>
                    </tr>

                }

            </table>

        }
        else
        {
            <p> No Coupons Now  </p>
        }

    </div>

</div>
