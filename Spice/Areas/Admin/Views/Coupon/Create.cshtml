@model Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info"> Create Coupon </h2>
<br />

<form asp-action="Create" asp-controller="Coupon" asp-area="Admin" enctype="multipart/form-data" method="post">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.DropDownList("CouponType",Html.GetEnumSelectList<ECouponType>(),"" ,new {@class="form-control"})
                <span class="text-danger" asp-validation-for="CouponType"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
                <span class="text-danger" asp-validation-for="Discount"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinAmount" class="form-control" />
                <span class="text-danger" asp-validation-for="MinAmount"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input name="Picture" type="file" class="form-control" />
                <span class="text-danger" asp-validation-for="Picture"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsActive" type="checkbox" />
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Coupon" class="btn btn-success">Back to List</a>
            </div>
        </div>

    </div>
</form>

