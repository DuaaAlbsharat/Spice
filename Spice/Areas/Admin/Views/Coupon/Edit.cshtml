@model Coupon
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<h4 class="text-info"> Edit Menu Item </h4>
<br />
<form asp-action="Edit" asp-controller="Coupon" asp-area="Admin" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CouponId" />
    <input type="hidden" asp-for="Picture" />
    <div class="whiteBackground  border row">
        <div class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CouponType" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownList("CouponType", Html.GetEnumSelectList<ECouponType>(), "", new { @class = "form-control" })
                    <span class="text-danger" asp-validation-for="CouponType"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Discount" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Discount" class="form-control" />
                    <span class="text-danger" asp-validation-for="Discount"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MinAmount" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MinAmount" class="form-control" />
                    <span class="text-danger" asp-validation-for="MinAmount"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Picture" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input name="Picture" type="file" class="form-control" />
                    <span class="text-danger" asp-validation-for="Picture"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsActive" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsActive" type="checkbox" />
                    <span class="text-danger" asp-validation-for="IsActive"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <a asp-action="Index" asp-controller="Coupon" class="btn btn-outline-dark">Back to List</a>
                    <input type="submit" value="Update" class="btn btn-outline-danger" />
                </div>
            </div>

        </div>

        <div class="col-3  offset-1">
            <img src="@Url.Content(Model.Picture)" style=" width:100%; border:1px solid#bbb9b8 ;border-radius:5px" alt="images" />
        </div>
    </div>
</form>


