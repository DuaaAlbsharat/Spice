@model int


<td style="width:150px">
    <div class="btn-group" role="group">
        <a asp-action="Edit" asp-controller="Category" asp-route-Id="@Model" class="btn btn-primary">

            <i class='fa fa-edit'></i>
        </a>
        <a asp-action="Details" asp-controller="Category" asp-route-Id="@Model" class="btn btn-primary">

            <i class="fa fa-list"></i>
        </a>
        <a asp-action="Delete" asp-controller="Category" asp-route-Id="@Model" class="btn btn-danger">

            <i class="fa fa-trash"></i>
        </a>
    </div>

</td>

